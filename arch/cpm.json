{
    "managers": [
        {
            "install_command": "yay -S",
            "update_command": "yay -Syu",
            "packages": [
                { "command": "bat", "package": "bat" },
                { "command": "bear", "package": "bear" },
                { "command": "ccls", "package": "ccls" },
                { "command": "cmake", "package": "cmake" },
                { "command": "composer", "package": "composer" },
                { "command": "exa", "package": "exa" },
                { "command": "exiftool", "package": "perl-image-exiftool" },
                { "command": "fd", "package": "fd" },
                { "command": "ffmpegthumbnailer", "package": "ffmpegthumbnailer" },
                { "command": "fzf", "package": "fzf" },
                { "command": "git", "package": "git" },
                { "command": "go", "package": "go" },
                { "command": "go-langserver", "package": "go-langserver-git" },
                { "command": "guru", "package": "go-tools" },
                { "command": "highlight", "package": "highlight" },
                { "command": "http", "package": "httpie" },
                { "command": "icat", "package": "icat" },
                { "command": "ipython", "package": "ipython" },
                { "command": "jq", "package": "jq" },
                { "command": "kitty", "package": "kitty" },
                { "command": "node", "package": "nodejs" },
                { "command": "nvr", "package": "neovim-remote" },
                { "command": "pass", "package": "pass" },
                { "command": "pylint", "package": "python-pylint" },
                { "command": "pylint2", "package": "python2-pylint" },
                { "command": "pyls", "package": "python-language-server" },
                { "command": "ranger", "package": "ranger" },
                { "command": "rg", "package": "ripgrep" },
                { "command": "svn", "package": "subversion" },
                { "command": "w3m", "package": "w3m" },
                { "command": "watchman", "package": "watchman" },
                { "command": "wmctrl", "package": "wmctrl" },
                { "command": "xclip", "package": "xclip" },
                { "command": "xdotool", "package": "xdotool" },
                { "command": "xsel", "package": "xsel" },
                { "command": "yarn", "package": "yarn" }
            ]
        },
        {
            "install_command": "yarn global add",
            "update_command": "yarn global upgrade",
            "packages": [
                { "command": "$YARN_HOME/global/node_modules/.bin/intelephense", "package": "intelephense" },
                { "command": "nvim", "package": "neovim" }
            ]
        },
        {
            "packages": [
                {
                    "command": "phpenv",
                    "install_command": "git clone git://github.com/phpenv/phpenv.git $PHPENV_HOME",
                    "update_command": "(cd $PHPENV_HOME && git pull --rebase --autostash)"
                },
                {
                    "command": "$PHPENV_HOME/plugins/php-build/bin/php-build",
                    "install_command": "git clone https://github.com/php-build/php-build $PHPENV_HOME/plugins/php-build",
                    "update_command": "(cd $PHPENV_HOME/plugins/php-build && git pull --rebase --autostash)"
                },
                {
                    "command": "symfony",
                    "install_command": "wget https://get.symfony.com/cli/installer -O - | sed 's/^CLI_CONFIG_DIR=.*/CLI_CONFIG_DIR=\".local\"/' | bash",
                    "update_command": "symfony self:update"
                }
            ]
        },
        {
            "install_command": "composer global require",
            "update_command": "composer global update",
            "packages": [{ "command": "php-cs-fixer", "package": "friendsofphp/php-cs-fixer" }]
        },
        {
            "install_command": "go get -v",
            "update_command": "go get -u",
            "packages": [{ "command": "golint", "package": "golang.org/x/lint/golint" }]
        },
        {
            "packages": [
                { "update_command": "zplugin self-update" },
                { "update_command": "nvim +PlugInstall +PlugUpdate +UpdateRemotePlugins +qall" },
                { "update_command": "nvim +CocUpdateSync +qall" },
                { "update_command": "nvim +PythonSupportInitPython2 +PythonSupportInitPython3 +qall" },
                { "update_command": "$HOME/.config/tmux/plugins/tpm/scripts/update_plugin_prompt_handler.sh all" }
            ]
        }
    ]
}
