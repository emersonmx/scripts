        {
            "name": "yarn",
            "install_command": "yarn global add",
            "update_command": "yarn global upgrade",
            "packages": [
                { "command": "nvim", "package": "neovim" },
                { "path": "$YARN_HOME/global/node_modules/.bin/intelephense", "package": "intelephense" },
                { "path": "$YARN_HOME/global/node_modules/.bin/vue", "package": "@vue/cli" }
            ]
        },
        {
            "name": "symfony",
            "packages": [
                {
                    "command": "symfony",
                    "install_command": "wget https://get.symfony.com/cli/installer -O - | sed 's/^CLI_CONFIG_DIR=.*/CLI_CONFIG_DIR=\".local\"/' | bash",
                    "update_command": "symfony self:update"
                }
            ]
        },
        {
            "name": "composer",
            "install_command": "composer global require",
            "update_command": "composer global update",
            "packages": [
                { "command": "php-cs-fixer", "package": "friendsofphp/php-cs-fixer" },
                { "path": "$HOME/.config/composer/vendor/hirak/prestissimo/", "package": "hirak/prestissimo" }
            ]
        },
        {
            "name": "go",
            "install_command": "go get -v",
            "update_command": "go get -u",
            "packages": [
                { "command": "efm-langserver", "package": "github.com/mattn/efm-langserver" },
                { "command": "golint", "package": "golang.org/x/lint/golint" }
            ]
        },
        {
            "name": "rust",
            "packages": [
                {
                    "command": "rustup",
                    "install_command": "curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh",
                    "update_command": "rustup update"
                }
            ]
        },
        {
            "name": "tools",
            "packages": [
                {
                    "command": "diff-so-fancy",
                    "install_command": "wget https://raw.githubusercontent.com/so-fancy/diff-so-fancy/master/third_party/build_fatpack/diff-so-fancy -P $HOME/.local/bin && chmod +x $HOME/.local/bin/diff-so-fancy",
                    "update_command": "wget https://raw.githubusercontent.com/so-fancy/diff-so-fancy/master/third_party/build_fatpack/diff-so-fancy -P $HOME/.local/bin && chmod +x $HOME/.local/bin/diff-so-fancy"
                },
                {
                    "command": "tmplt",
                    "install_command": "curl -L 'https://raw.githubusercontent.com/emersonmx/tmplt/master/tmplt' > $HOME/.local/bin/tmplt && chmod +x $HOME/.local/bin/tmplt",
                    "update_command": "curl -L 'https://raw.githubusercontent.com/emersonmx/tmplt/master/tmplt' > $HOME/.local/bin/tmplt && chmod +x $HOME/.local/bin/tmplt"
                },
                {
                    "command": "edit-config",
                    "install_command": "curl -L 'https://raw.githubusercontent.com/emersonmx/scripts/master/tools/edit-config' > $HOME/.local/bin/edit-config && chmod +x $HOME/.local/bin/edit-config",
                    "update_command": "curl -L 'https://raw.githubusercontent.com/emersonmx/scripts/master/tools/edit-config' > $HOME/.local/bin/edit-config && chmod +x $HOME/.local/bin/edit-config"
                }
            ]
        },
        {
            "name": "misc",
            "packages": [
                { "update_command": "zplugin self-update" },
                { "update_command": "nvim +PlugInstall +PlugUpdate +UpdateRemotePlugins +qall" },
                { "update_command": "nvim +CocUpdateSync +qall" },
                { "update_command": "nvim +PythonSupportInitPython3 +qall" },
                { "update_command": "$HOME/.config/tmux/plugins/tpm/scripts/update_plugin_prompt_handler.sh all" }
            ]
        }
    ]
}
